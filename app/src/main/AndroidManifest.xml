<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bijendra.configuration.handle.handlingconfigurationchanges">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MMCActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/manually_managing_configuration" />
        <activity
            android:name=".SRASActivity"
            android:label="@string/saving_and_restoring_activity_state" />
        <activity
            android:name=".RFSActivity"
            android:label="@string/saving_and_restoring_fragment_state" />
        <activity android:name=".ROSIFActivity"
            android:label="@string/retaining_object_state_fragments" />

    </application>

</manifest>